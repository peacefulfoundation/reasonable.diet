---
import { type CollectionEntry, getCollection } from 'astro:content';
import PageLayout from '@/layouts/PageLayout.astro';
import TopLayout from '@/layouts/TopLayout.astro';
import BottomLayout from '@/layouts/BottomLayout.astro';
import { SEARCH } from '@/consts';
import Search from '@/components/Search';

const data = (await getCollection('recipes')) as CollectionEntry<'recipes'>[];
---

<PageLayout title={SEARCH.TITLE} description={SEARCH.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading">{SEARCH.TITLE}</div>
  </TopLayout>
  <BottomLayout>
    <div class="animate">
      <Search client:load data={data} />
    </div>
  </BottomLayout>
</PageLayout>
